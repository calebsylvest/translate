<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from submitting</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %> <br> 
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :language %><br>
    <%= f.text_area :language %>
  </p>
  <p>
    <%= f.label :translate_to %><br>
    <%= f.text_area :translate_to %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>