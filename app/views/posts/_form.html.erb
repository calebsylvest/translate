<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %> <br> 
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :language %><br>
    <%= f.text_area :language %>
  </p>
  <p>
    <%= f.label :translate_to %><br>
    <%= f.text_area :translate_to %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>